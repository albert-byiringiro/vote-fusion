{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true, // Optional: set to true for faster builds by skipping library checks
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Use the new JSX transform if applicable
    "types": ["@types/react", "@types/react-dom", "@types/jest"] // Include types for React and React-DOM
  },
  "include": ["./src", "./jest-setup.ts"] // Ensure all relevant files are included
}